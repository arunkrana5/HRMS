@model IList<ClientsTran.List>
@section style{
    @System.Web.Optimization.Styles.Render("~/bundle/dataTablecss")
}


<div class="page-header">
    <div class="page-leftheader">
        <h4 class="page-title">Client Tran List</h4>
        <div class="page-leftheader-btn">

            @if (ClsApplicationSetting.GetSessionValue("Write") == "True")
            {
                <a class="btn btndefault" onclick="ListHeaderAdd();">
                    <i class="fa fa-plus"></i> Add
                </a>
            }
            @if (ClsApplicationSetting.GetSessionValue("Export") == "True")
            {
                <a id="anchListExcelReport" onclick="ListHeaderExport();" class="btn btnupdate btn-l ripplelink">
                    <i class="fa fa-file-excel-o"></i> Export
                </a>
            }
            @if (ClsApplicationSetting.GetSessionValue("Import") == "True")
            {
                <a id="anchListExcelReport" onclick="ListHeaderImport();" class="btn btnupdate btn-l ripplelink">
                    <i class="fa fa-file-excel-o"></i> Import
                </a>
            }
            <button type="button" class="btn btncancel pull-right" onclick="ShowLoadingDialog(); window.location = '@Url.Action("ClientsList",new { src = ClsCommon.Encrypt(ViewBag.MenuID+"*"+"/Masters/ClientsList") })';"><i class="fa fa-times"></i> Cancel</button>

        </div>
    </div>

</div>

<input type="hidden" id="hdnClientID" value="@ViewBag.ClientID" />
<div class="row">
    <div class="col-lg-12 ">
        <div class="card">
            <div class="card-body">
                <div class="">
                    <div class="table-responsive">
                        <table id="example" class="table table-bordered text-nowrap key-buttons">
                            <thead>
                                <tr>
                                    <th>S.no.</th>
                                    <th>Action</th>
                                    <th>Name</th>
                                    <th>Code</th>
                                    <th>Print Name</th>
                                    <th>State Name</th>
                                    <th>State Code</th>
                                    <th>State TIN</th>
                                    <th>GST No</th>
                                    <th>PAN</th>
                                    <th>Commission</th>
                                    <th>Inserted Date</th>
                                    <th>Inserted by</th>
                                    <th>Updated Date</th>
                                    <th>Updated by</th>
                                    <th>IP Address</th>
                                </tr>

                            </thead>
                            <tbody>
                                @{ int count = 0;}
                                @foreach (var item in Model)
                                {
                                    count++;
                                <tr>
                                    <td>@count</td>
                                    <td>
                                        <input type="hidden" name="I" value="@item.ClientTranID" />
                                        
                                        <input type="hidden" name="N" value="@item.Code" />


                                        @if (ClsApplicationSetting.GetSessionValue("Modify") == "True")
                                        {
                                            @Html.Raw(item.IsActive == true
                                      ? "<a  data-toggle='tooltip' data-original-title='Click to DeActivate' list='ClientsTran_IsActive' OP='0' class='AIsActive' > <i class='fa fa-check-circle checkgreen' aria-hidden='true'></i></a>"
                                      : "<a data-toggle='tooltip' data-original-title='Click to Activate' list='ClientsTran_IsActive' OP='1'  class='AIsActive' > <i class='fa fa-times-circle crossred' aria-hidden='true'></i></a>")



                                            <a title="Edit" onclick="ListHeaderAdd(@item.ClientTranID,this);" data-toggle='tooltip'> <i class="fa fa-pencil-square-o checkgreen" aria-hidden="true"></i> </a>
                                        }

                                    </td>
                                    <td>@item.Name</td>
                                    <td>

                                        @item.Code

                                    </td>
                                    <td>@item.PrintName</td>
                                    <td>@item.StateName</td>
                                    <td>@item.StateCode</td>
                                    <td>@item.StateTIN</td>
                                    <td>@item.GSTNo</td>
                                    <td>@item.PAN</td>
                                    <td>@item.Commission</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.CreatedBy</td>
                                    <td>@item.ModifiedDate</td>
                                    <td>@item.ModifiedBy</td>
                                    <td>@item.IPAddress</td>
                                </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



<div class="modal fade pop-dgn" id="ViewModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header blk-gdn-btn">
                <h4 class="modal-title"><i class="fas fa-print"></i>Add Client Tran </h4>
                <div class="close" data-dismiss="modal">&times;</div>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div id="TagetDiv"></div>
            </div>
        </div>
    </div>

</div>


@section scripts    {
    @System.Web.Optimization.Scripts.Render("~/bundle/dataTablesjs")

    @System.Web.Optimization.Scripts.Render("~/bundle/unobtrusivejs")

    <script>

        function ListHeaderAdd(ID) {
            var hdnClientID = $("#hdnClientID").val();
        if (ID == undefined)
        {
            ID = 0;
        }
			$.ajax({
                url: "/Masters/_ClientsTranAdd",
                type: "Get",
                data: { src: EncryptJSON(@ViewBag.MenuID+"*/Masters/_ClientsTranAdd*" + hdnClientID + "*" + ID) },
                success: function (data)
                {
                    $("#TagetDiv").empty();
                    $("#TagetDiv").html(data);
                    $('#ViewModal').modal({
                        backdrop: 'static',
                        keyboard: false
                    })

                    $(".applyselect").select2();
                     var form = $("form")
                .removeData("validator")
                .removeData("unobtrusiveValidation");
                    $.validator.unobtrusive.parse(form);
				},
				error: function (er) {
					alert(er);

				}
			});
            }


        function OnSuccess(obj) {
            if (obj.Status) {
                SuccessToaster(obj.SuccessMessage);
                window.location.reload();
            }
            else {
                CloseLoadingDialog();
                FailToaster(obj.SuccessMessage);

            }
        }


    </script>

}